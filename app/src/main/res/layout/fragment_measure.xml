<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context="edu.jhu.inemzer1.snakemeasurer.MeasureFragment">

    <TextView
        android:id="@+id/directions_text"
        android:text="Tap the ends of the fixed length object."
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textAlignment="center"
        android:layout_centerInParent="false"
        android:layout_centerVertical="false"
        android:gravity="center" />

    <ImageView
        android:id="@+id/snake_image"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@id/directions_text"
        android:background="@color/primaryBackgroundDark"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/snake_image"
        android:layout_alignParentBottom="true"
        android:gravity="center" >

        <Button
            android:id="@+id/next_button"
            android:text="Next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/accent" />

    </LinearLayout>

</RelativeLayout>
